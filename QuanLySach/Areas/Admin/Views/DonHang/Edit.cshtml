@model QuanLySach.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Form</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Form Basic</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            May 2023
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">Export List</a>
                            <a class="dropdown-item" href="#">Policies</a>
                            <a class="dropdown-item" href="#">View Assets</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Default Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Sửa Đơn Hàng</h4>
                    <p class="mb-30">All bootstrap element classies</p>
                </div>
                <div class="pull-right">
                    <a href="#basic-form1" class="btn btn-primary btn-sm scroll-click" rel="content-y" data-toggle="collapse" role="button"></a>
                </div>
            </div>
            <form method="post">
                @Html.HiddenFor(model => model.Ma)
                @Html.HiddenFor(model => model.MaKhachHang)
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Ngày Đặt Hàng</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" type="text" placeholder="" name="NgayDatHang" value="@Model.NgayDatHang" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Phí Giao</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="PhiGiao" value="@Model.PhiGiao" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Tên Người Nhận</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="TenNguoiNhan" value="@Model.TenNguoiNhan" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Địa Chỉ</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="DiaChi" value="@Model.DiaChi" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Điện Thoại</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="DienThoai" value="@Model.DienThoai" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Email</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="Email" value="@Model.Email" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Trạng Thái</label>
                    <div class="col-sm-12 col-md-10">
                        <label>Đã thanh toán</label>
                        @Html.RadioButton("TrangThai", "True")<br />
                        <label>Chưa thanh toán</label>
                        @Html.RadioButton("TrangThai", "False")
                    </div>
                </div>

                <div class="btn-list">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Sửa</button>
                    <a href="@Url.Action("DanhSachDonHang","DonHang")" class="btn btn-secondary btn-lg btn-block">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>


